{
  "name": "freenomad",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix --cache --cache-location .eslintcache",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx --cache --cache-location .eslintcache",
    "lint:src": "eslint 'src/**/*.{js,jsx,ts,tsx}' --ignore-pattern 'src/generated/**' --cache --cache-location .eslintcache",
    "lint:fast": "eslint 'src/{app,components,hooks,lib}/**/*.{js,jsx,ts,tsx}' --ignore-pattern 'src/generated/**' --cache --cache-location .eslintcache",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPatterns=src/",
    "test:api": "jest --config=jest.config.api.js",
    "test:integration": "npm run test:unit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:links": "playwright test tests/e2e/links-validation.spec.ts",
    "test:e2e:workflows": "playwright test tests/e2e/core-workflows.spec.ts",
    "test:e2e:browser": "playwright test tests/e2e/cross-browser.spec.ts",
    "test:e2e:responsive": "playwright test tests/e2e/responsive-design.spec.ts",
    "test:e2e:accessibility": "playwright test tests/e2e/accessibility-performance.spec.ts",
    "test:e2e:comprehensive": "playwright test tests/e2e/test-runner.spec.ts",
    "test:e2e:report": "playwright show-report test-results/html-report",
    "test:all": "npm run test && npm run test:e2e",
    "test:comprehensive": "npm run test:coverage && npm run test:e2e:comprehensive",
    "test:automation": "ts-node --project tests/automation/tsconfig.json tests/automation/examples/example-test-suite.ts",
    "test:automation:smoke": "npm run test:automation smoke",
    "test:automation:full": "npm run test:automation full",
    "test:automation:cross-browser": "npm run test:automation cross-browser",
    "test:automation:performance": "npm run test:automation performance",
    "test:automation:health": "npm run test:automation health",
    "test:automation:demo": "ts-node --project tests/automation/tsconfig.json tests/automation/demo/simple-automation-demo.ts demo",
    "test:e2e:enhanced": "playwright test tests/e2e/enhanced-auth-workflow.spec.ts",
    "test:db:seed": "ts-node --project tests/automation/tsconfig.json -e \"import { seedQuickTestData } from './tests/automation/database/test-data-seeder'; seedQuickTestData().then(() => console.log('✅ Test data seeded')).catch(console.error)\"",
    "test:db:clear": "ts-node --project tests/automation/tsconfig.json -e \"import { clearTestDatabase } from './tests/automation/database/test-data-seeder'; clearTestDatabase().then(() => console.log('✅ Test database cleared')).catch(console.error)\"",
    "test:smoke": "npm run test -- --testNamePattern='smoke'",
    "ci:local": "./scripts/local-ci.sh",
    "ci:quick": "./scripts/quick-ci.sh",
    "prepare": "husky",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:test": "tsx scripts/test-db-connection.ts",
    "db:test:neon": "tsx scripts/test-neon-connection.ts",
    "db:test:dev": "tsx scripts/test-dev-connection.ts",
    "db:deploy:production": "tsx scripts/deploy-production-data.ts production",
    "db:deploy:staging": "tsx scripts/deploy-production-data.ts staging",
    "db:deploy:development": "tsx scripts/deploy-production-data.ts development",
    "db:validate": "tsx scripts/deploy-production-data.ts production --validate-only",
    "db:setup:complete": "npm run db:seed",
    "db:fix:images": "tsx scripts/fix-city-images.ts",
    "db:sync:dev": "tsx scripts/sync-dev-database.ts",
    "db:sync:schema": "tsx scripts/sync-dev-database.ts --schema-only",
    "db:sync:data": "tsx scripts/sync-dev-database.ts --data-only",
    "db:sync:full": "tsx scripts/sync-dev-database.ts --include-users",
    "db:sync:dry-run": "tsx scripts/sync-dev-database.ts --dry-run"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.10.0",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/adapter-neon": "^6.14.0",
    "@prisma/client": "^6.14.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-collapsible": "^1.1.12",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@types/bcryptjs": "^2.4.6",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.1",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "lucide-react": "^0.540.0",
    "next": "15.5.0",
    "next-auth": "^5.0.0-beta.29",
    "node-cron": "^4.2.1",
    "nodemailer": "^6.10.1",
    "prisma": "^6.14.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "undici": "^7.15.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@faker-js/faker": "^9.9.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.21",
    "eslint": "^9",
    "eslint-config-next": "15.5.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "lint-staged": "^16.1.5",
    "playwright": "^1.55.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5"
  },
  "overrides": {
    "lucide-react": {
      "react": "$react"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
